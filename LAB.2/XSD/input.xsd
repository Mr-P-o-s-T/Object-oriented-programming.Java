<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="LAB.2"
           xmlns="LAB.2"
           elementFormDefault="qualified">

    <xs:element name="guns">
        <xs:complexType>
            <xs:sequence maxOccurs="unbounded">
                <xs:element name="gun" type="gun" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="gun">
        <xs:sequence>
            <xs:element name="model" type="xs:string" />
            <xs:element name="handy" type="handyType" />
            <xs:element name="origin" type="xs:string" />
            <xs:element name="TTC" type="TTC" />
            <xs:element name="materials" type="materialsType" />
        </xs:sequence>
        <xs:attribute name="id" type="xs:positiveInteger" use="required"/>
    </xs:complexType>
    
    <xs:complexType name="handyType">
        <xs:attribute name="num" type="handyNumber" use="required" />
    </xs:complexType>

    <xs:simpleType name="handyNumber">
        <xs:restriction base="xs:integer">
            <xs:enumeration value="1" />
            <xs:enumeration value="2" />
        </xs:restriction>
    </xs:simpleType>
    
    <xs:complexType name="TTC">
        <xs:sequence>
            <xs:element name="range" type="rangeType" />
            <xs:element name="sightingRange" type="sightingRangeType" />
            <xs:element name="attachments" type="attachmentsType" />
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="rangeType">
        <xs:attribute name="type" type="rangeValue" use="required" />
    </xs:complexType>
    
    <xs:simpleType name="rangeValue">
        <xs:restriction base="xs:string">
            <xs:enumeration value="near" />
            <xs:enumeration value="medium" />
            <xs:enumeration value="far" />
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="sightingRangeType">
        <xs:restriction base="xs:integer">
            <xs:minInclusive value="0" />
        </xs:restriction>
    </xs:simpleType>

    <xs:complexType name="attachmentsType">
        <xs:sequence>
            <xs:element name="clip" type="xs:string" fixed="" minOccurs="0" />
            <xs:element name="optics" type="xs:string" fixed="" minOccurs="0" />
        </xs:sequence>
    </xs:complexType>
    
    <xs:complexType name="materialsType">
        <xs:sequence maxOccurs="unbounded">
            <xs:element name="material" type="xs:string" />
        </xs:sequence>
    </xs:complexType>

</xs:schema>
